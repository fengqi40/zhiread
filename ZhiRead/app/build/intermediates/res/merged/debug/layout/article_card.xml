<?xml version="1.0" encoding="utf-8"?>
<begin.zhiread.RippleView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:layout_marginTop="4dp">

<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    card_view:cardBackgroundColor="#00FFFFFF">
    <FrameLayout
        android:id="@+id/articlecard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/timg"
        >
        <begin.zhiread.TomatoImageView
            android:src="@drawable/icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            android:id="@+id/usrImage"
            android:layout_gravity="left|top|center_vertical"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="——一个全新的阅读体验"
                android:textSize="28dp"
                android:gravity="center"
                android:id="@+id/textSec"
                android:background="#30000000"
                android:textColor="#FFFFFF"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textWriter"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#FFFFFF"
            android:layout_marginTop="82dp"
            android:layout_marginLeft="16dp"
            android:layout_gravity="left|top|center_vertical"
            android:text="知悦团队" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="91dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="知悦"
            android:textSize="45dp"
            android:background="#30000000"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:id="@+id/textTitle"
            android:textColor="@color/cardview_light_background"
            android:layout_gravity="center" />




    </FrameLayout>

</android.support.v7.widget.CardView>
</begin.zhiread.RippleView>